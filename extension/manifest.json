{
  "manifest_version": 3,
  "name": "NSFW Identifier (Local)",
  "version": "0.1.0",
  "description": "Right-click an image to classify it via a local FastAPI server.",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
